@model Sports.ViewModels.GameViewModel

@{
    ViewData["Title"] = "Подробности об игре";
}

<h2>Подробности об игре</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SportName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SportName)

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Team1Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Team1Name)
            (<a asp-controller="Teams" asp-action="Details" asp-route-Id="@Model.Team1Id">О команде</a>)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Team2Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Team2Name)
            (<a asp-controller="Teams" asp-action="Details" asp-route-Id="@Model.Team2Id">О команде</a>)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @String.Format("{0:MM.dd.yy}", Model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Events)
        </dt>
        <dd>
            @foreach (var gameEvent in Model.Events)
            {
                @gameEvent.Value <text>
                    (<a asp-controller="Events" asp-action="Details" asp-route-Id="@gameEvent.Key">подробнее</a>)</text><br />
            }
            <a asp-controller="Events" asp-action="Create" asp-route-gameId="@Model.Id">Добавить событие</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index" asp-route-sportId="@Model.SportId">Вернуться к списку</a>
</div>
