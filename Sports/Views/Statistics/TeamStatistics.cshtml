@model IEnumerable<Sports.ViewModels.Statistics>

@{
    ViewData["Title"] = "Статистика команды";
}

<h2>Статистика команды @ViewData["Name"]</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        @foreach (var eventType in Model)
        {
            <dt>
                @eventType.Name
            </dt>
            <dd>
                @eventType.Count
            </dd>
        }
        @if (Model.Count() == 0)
        {
            <dt>
                Команда-бездельник.
            </dt>
            <dd>
                Никто из членов этой команды ни разу ничего не сделал.
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Вернуться</a>
</div>
